---
interface Props {
  title: string;
  description: string;
  linkText: string;
  linkHref: string;
  icon?: string;
}

const { title, description, linkText, linkHref, icon } = Astro.props;
---

<a href={linkHref} class="block bg-white rounded-3xl p-8 shadow-sm hover:shadow-md transition-shadow text-center no-underline text-inherit">
  <h3 class="font-heading text-xl font-semibold mb-3">{title}</h3>
  <p class="text-text-muted text-sm leading-relaxed mb-4">{description}</p>
  <span class="inline-flex items-center text-sm font-medium text-yellow-dark">
    {linkText}
    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </span>
</a>
